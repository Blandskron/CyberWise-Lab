# --- General ---
ENV=lab                    # lab | safe
PORT=8000
LOG_LEVEL=INFO
LOG_JSON=true
LOG_FILE=logs/app.log

# --- Feature toggles ---
ENABLE_HEALTH=true
ENABLE_METRICS=true
ENABLE_AUDIT=true
ENABLE_REQUEST_ID=true

# --- Security (mitigations Part 4; d√©jalas en false si quieres mantener vulnerabilidades) ---
SQL_PARAMS_ON=false
XSS_ESCAPE_ON=false
CORS_SAFE_ON=false

# --- Sinks (si usas Splunk HEC) ---
LOGSTASH_URL=http://localhost:5044
SPLUNK_HEC_URL=
SPLUNK_HEC_TOKEN=
